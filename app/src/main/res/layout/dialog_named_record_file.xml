<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ed_set_name_record_file"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:ems="10"
        android:gravity="center|start"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bt_default"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp35"
        android:layout_below="@+id/ed_set_name_record_file"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Default"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_confirm"
        app:layout_constraintTop_toBottomOf="@+id/ed_set_name_record_file"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="@dimen/dp16" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp35"
        android:layout_below="@+id/ed_set_name_record_file"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/bt_default"
        android:layout_toLeftOf="@+id/bt_default"
        android:background="@color/colorPrimary"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_set_name_record_file"
        android:layout_marginRight="@dimen/dp16" />

    <TextView
        android:id="@+id/tv_set_record_file_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dp16"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="@dimen/dp16"
        android:gravity="center"
        android:text="Set Name For File"
        android:textSize="@dimen/sp20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>