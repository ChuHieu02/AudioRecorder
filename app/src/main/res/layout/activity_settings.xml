<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingsActivity">

    <include
        layout="@layout/view_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></include>

    <ScrollView
        android:layout_marginBottom="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Choose_Folder"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackground"
                android:drawableRight="@drawable/ic_settings_go"
                android:fontFamily="@font/arial"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/location_file_setting"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_respon_quality_setting" />

            <TextView
                android:id="@+id/tv_location_file_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="3"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                app:layout_constraintStart_toStartOf="@+id/tv_Choose_Folder"
                app:layout_constraintTop_toBottomOf="@+id/tv_Choose_Folder" />

            <TextView
                android:id="@+id/tv_choose_file_type_setting"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackground"
                android:drawableEnd="@drawable/ic_settings_go"
                android:fontFamily="@font/arial"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/recoder_file_type_setting"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/tv_choose_quality_setting"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackground"
                android:drawableRight="@drawable/ic_settings_go"
                android:fontFamily="@font/arial"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/recoder_quality_setting"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/default_name_setting" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:adjustViewBounds="true"
                android:background="?selectableItemBackground"
                android:drawableRight="@drawable/ic_settings_go"
                android:fontFamily="@font/arial"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/default_file_name_setting"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_respon_file_type_setting" />

            <TextView
                android:visibility="gone"
                android:id="@+id/default_name_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:fontFamily="@font/arial"
                android:gravity="center|start"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/label_basic_setting"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_respon_quality_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_choose_quality_setting" />

            <TextView
                android:gravity="center|start"
                android:paddingRight="@dimen/dp16"
                android:id="@+id/tv_respon_file_type_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_choose_file_type_setting" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
