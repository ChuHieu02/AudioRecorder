<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/rg_FormatType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_file_type_setting">

        <RadioButton
            android:id="@+id/rb_Mp3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:checked="false"
            android:text="@string/rb_fomat_type_mp3" />

        <RadioButton
            android:id="@+id/rb_Wav"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp8"
            android:checked="false"
            android:text="@string/rb_fomat_type_wav" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>